{
   "xsappname": "schedulermulti",
   "tenant-mode": "shared",
   "scopes": [
      {
         "name": "$XSAPPNAME.jobschedulerscope",
         "description": "Job Scheduler",
         "grant-as-authority-to-apps": ["$XSSERVICENAME(schedulermulti_job)"]
      },
      {
         "name": "uaa.user",
         "description": "UAA"
      }
   ],
   "role-templates": [
      {
         "name": "Token_Exchange",
         "description": "UAA Token Exchange",
         "scope-references": ["uaa.user", "$XSAPPNAME.jobschedulerscope"]
      }
   ],
   "oauth2-configuration": {
      "token-validity": 3600,
      "redirect-uris": [
         "http://localhost:5000/**",
         "http://localhost:4004/**",
         "https://*.*.applicationstudio.cloud.sap/**",
         "https://*.cfapps.*.hana.ondemand.com/**",
         "https://*.authentication.*.hana.ondemand.com/**"
      ]
   }
}
